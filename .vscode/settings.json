{
  "deno.enablePaths": [
    "supabase/functions"
  ],
  "deno.lint": true,
  "deno.unstable": [
    "bare-node-builtins",
    "byonm",
    "sloppy-imports",
    "unsafe-proto",
    "webgpu",
    "broadcast-channel",
    "worker-options",
    "cron",
    "kv",
    "ffi",
    "fs",
    "http",
    "net"
  ],
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  // Use tsconfig.frontend.json for Next.js files to get JSX/DOM types
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.preferences.renameAcrossFiles": true,
  // Tailwind CSS v4 uses @import and @apply; silence unknown rules in editor CSS validation
  "css.lint.unknownAtRules": "ignore"
}
