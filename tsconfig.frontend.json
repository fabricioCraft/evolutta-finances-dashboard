{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM"],
    "allowJs": true,
    "strict": false,
    "types": ["@types/react", "@types/react-dom"]
  },
  "include": [
    "src/app/**/*.tsx",
    "src/components/**/*.tsx",
    "src/services/**/*.ts",
    "next-env.d.ts"
  ]
}